<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/activity_item_rounded_corner"
    android:layout_margin="12sp">
    <ImageView
        android:id="@+id/accommodation_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        tools:srcCompat="@tools:sample/avatars"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="2sp"
        android:layout_marginEnd="5sp"/>

    <TextView
        android:id="@+id/accommodation_name"
        android:layout_width="wrap_content"
        android:maxWidth="220sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginStart="8sp"
        android:text="@string/accommodation_name"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/accommodation_description"
        android:layout_width="230sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60sp"
        android:textSize="18sp"
        android:layout_marginStart="12sp"
        app:layout_constraintTop_toBottomOf="@id/accommodation_name"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/accommodation_description"/>
</androidx.constraintlayout.widget.ConstraintLayout>